@model MapWorld.Models.ApplicationUser
@using Microsoft.AspNet.Identity

@{ 
    Layout = null;
}

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
        <li class="nav-item">
            @Html.ActionLink("Hello " + Model.FirstName + " " + Model.LastName + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "black-text" })
        </li>
        <li class="nav-item "><a class="black-text" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    }
}
else
{
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "black-text" })
            <br />
        </li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "black-text" })</li>
}
